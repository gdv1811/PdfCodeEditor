<UserControl x:Class="PdfCodeEditor.Views.PdfDocumentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:editor ="clr-namespace:PdfCodeEditor.Editor"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="300"
             PreviewKeyUp="PdfDocumentViewOnPreviewKeyUp"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ToolBarTray>
            <ToolBar>
                <Button Width="20"
                        Height="20"
                        Click="BackwardButtonOnClick"
                        Content="&lt;-"
                        SnapsToDevicePixels="True" />
                <Button Width="20"
                        Height="20"
                        Click="ForwardButtonOnClick"
                        Content="-&gt;"
                        SnapsToDevicePixels="True" />
            </ToolBar>
        </ToolBarTray>
        <editor:PdfTextEditor x:Name="Editor"
                              Grid.Row="1"
                              Document="{Binding Document}"
                              FontFamily="Consolas"
                              FontSize="10pt"
                              IsModified="{Binding IsModified,
                                                   Mode=TwoWay}"
                              ShowLineNumbers="True"
                              SyntaxHighlighting="Pdf" />

        <StatusBar Grid.Row="2">
            <Label Margin="5,-5"
                   Content="{Binding ElementName=Editor, Path=CaretOffset}"
                   ContentStringFormat="Offset: {0}" />
            <Label Margin="5,-5"
                   Content="{Binding ElementName=Editor, Path=SelectionLength}"
                   ContentStringFormat="Selected: {0}" />
        </StatusBar>
    </Grid>
</UserControl>
